# Copy this file to .env and fill in the values

# SMTP configuration (use your app password for SMTP_PASS if required)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# Set your SMTP_USER and SMTP_PASS in a real .env file. Do NOT commit real credentials.
SMTP_USER=
SMTP_PASS=

# Optional: Override From header (example: noreply@yourdomain.com)
EMAIL_FROM=

# JWT secret for signing tokens
JWT_SECRET=replace-with-a-secure-secret

# Session secret (if you run server/index.js which uses sessions)
SESSION_SECRET=replace-with-a-session-secret

# Frontend URL used in CORS
FRONTEND_URL=http://localhost:5173
